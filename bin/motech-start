#!/bin/sh
echo "Exporting Env Vars"

export ENVIRONMENT=DEVELOPMENT
export org_motechproject_helloworld=$PROJECTS/dimagi/motech-learning/helloworld/src/main/resources;

echo "Starting Tomcat"
~/dev/java/apache-tomcat-7.0.70/bin/catalina.sh jpda start

echo "+++++++++++++++++++++++++++++++++++++++++++++++++"
echo "http://localhost:8080/motech-platform-server/"
echo "+++++++++++++++++++++++++++++++++++++++++++++++++"

tail -f $PROJECTS/java/apache-tomcat-7.0.70/logs/catalina.out
