#!/usr/bin/env bash
echo Activating cchq environment...
source ~/.virtualenvs/cchq/bin/activate

echo Entering commcare-hq folder...
cd ~/dev/dimagi/commcare-hq

echo Fetch all new stuff from git...
git fetch
git checkout master
git pull origin master
git submodule update --init --recursive

echo Installing all requirements
pip install -r requirements/requirements.txt -r requirements/dev-requirements.txt -r requirements/prod-requirements.txt

echo Deleting old python files...
find . -name '*.pyc' -delete

echo Migrate...
./manage.py migrate

echo Compiling internationalized files...
./manage.py compilejsi18n

echo Install new javascript deps...
bower install
